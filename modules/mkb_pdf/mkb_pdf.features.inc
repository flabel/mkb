/**
 * Implements hook_ctools_plugin_api().
 */
function mkb_pdf_ctools_plugin_api($module = NULL, $api = NULL) {
  if ($module == "strongarm" && $api == "strongarm") {
    return array("version" => "1");
  }
}

/**
 * Implements hook_views_api().
 */
function mkb_pdf_views_api($module = NULL, $api = NULL) {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'mkb_pdf'),
    'template path' => drupal_get_path('module', 'mkb_pdf') . '/views',
  );
}

/**
 * Implements hook_node_info().
 */
function mkb_pdf_node_info() {
  $items = array(
    'application_pdf' => array(
      'name' => t('Application PDF'),
      'base' => 'node_content',
      'description' => t('The PDF files in this content type is generated by call administrators according to specific actions in the submission system'),
      'has_title' => '1',
      'title_label' => t('Title'),
      'help' => '',
    ),
  );
  drupal_alter('node_info', $items);
  return $items;
}
